<%- include("headers") -%>

    <div class="box" id="heading">
    <h1><%=listTitle%></h1>
</div>
        <div class="box">
        <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="post" >              
            <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id %>" onChange="this.form.submit()">
              <!-- We always require a submit button of type submit to pass all the data to app.js but here we dont want a button so we use onchange tag with javascript inside -->
        <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle %>"></input>
</form>
      <%  }); %>
        
        <form  class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
    <!-- To use javascript code in ejs html file.. you have to enclose to javascript in the <% %> tags. 
    <% %> only in a single line.. you cant enclose multiple lines inside it  -->

